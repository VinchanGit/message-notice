{
    "name": "vinchan/message-notice",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MessageNotice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MessageNoticeTest\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Vinchan",
            "email": "ademo@vip.qq.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "hyperf/guzzle": "^1.1|^2.1|^3.0"
    },
    "require-dev": {
        "hyperf/event": "*",
        "hyperf/di": "v2.*",
        "hyperf/config": "v2.2.*",
        "hyperf/framework": "v2.2.*",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "*",
        "hyperf/ide-helper": "v2.2.5"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "MessageNotice\\ConfigProvider"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
    }
}
